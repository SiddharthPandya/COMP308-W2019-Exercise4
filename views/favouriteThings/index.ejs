<% include ../partials/header.ejs %>

 <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <br>
                <table class="table table-brodered table-striped table-hover">
                    <!-- Header Row -->
                    <tr>
                        <th class="text-centre">Name</th>
                        <th class="text-centre">Description</th>
                    </tr>

                    <!-- Repeatable Template Row -->
                    <% for(let count=0; count<thingsList.length; count++){ %>
                    <tr>
                        <td class="text-centre"><%= thingsList[count].name %></td>
                        <td class="text-centre"><%= thingsList[count].description %></td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

<% include ../partials/footer.ejs %>